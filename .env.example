# Environment Variables Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_if_using_cloud

# Content Configuration
BOOK_CONTENT_PATH=./book_content
CHUNK_SIZE=600
CHUNK_OVERLAP=100

# API Configuration
API_HOST=0.0.0.0
API_PORT=7860
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://mrowaisabdullah.github.io,https://huggingface.co

# Conversation Context
MAX_CONTEXT_MESSAGES=3
CONTEXT_WINDOW_SIZE=4000

# Ingestion Configuration
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# Health Monitoring
HEALTH_CHECK_INTERVAL=30

# Frontend Configuration (React)
REACT_APP_CHAT_API_URL=https://mrowaisabdullah-ai-humanoid-robotics.hf.space/chat

# Authentication Configuration
SECRET_KEY=your_jwt_secret_key_here_use_at_least_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Email Configuration (for password resets)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=AI Book App

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# Frontend URL (for email links and redirects)
FRONTEND_URL=http://localhost:3000