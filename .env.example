# Environment Variables Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
n# Gemini API Configuration (for OpenAI Agents SDK)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
GEMINI_MODEL=gemini-2.0-flash-lite

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_if_using_cloud

# Content Configuration
BOOK_CONTENT_PATH=./book_content
CHUNK_SIZE=600
CHUNK_OVERLAP=100

# API Configuration
API_HOST=0.0.0.0
API_PORT=7860
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://mrowaisabdullah.github.io,https://huggingface.co

# Conversation Context
MAX_CONTEXT_MESSAGES=3
CONTEXT_WINDOW_SIZE=4000

# Ingestion Configuration
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# Health Monitoring
HEALTH_CHECK_INTERVAL=30

# Frontend Configuration (React)
REACT_APP_CHAT_API_URL=https://mrowaisabdullah-ai-humanoid-robotics.hf.space/chat

# Authentication Configuration
SECRET_KEY=your_jwt_secret_key_here_use_at_least_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Email Service Configuration
EMAIL_SERVICE=smtp

# SMTP Configuration (Gmail - recommended for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Resend Configuration (recommended for production)
# Get API key from https://resend.com/api-keys
# RESEND_API_KEY=re_your_resend_api_key_here

# Email Settings
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=AI Book

# Email Verification & Security
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_EXPIRE_MINUTES=1440  # 24 hours
PASSWORD_RESET_EXPIRE_MINUTES=60  # 1 hour

# Session Configuration
SESSION_EXPIRE_MINUTES=10080  # 7 days
SESSION_COOKIE_NAME=session_id
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Database Configuration
# For production with Neon PostgreSQL (recommended)
# Get connection string from https://neon.tech
DATABASE_URL=postgresql+asyncpg://username:password@ep-xxx.region.aws.neon.tech/ai_book?sslmode=require

# For development (SQLite - NOT recommended for production)
# DATABASE_URL=sqlite:///./app.db

# Frontend URL (for email links and redirects)
FRONTEND_URL=http://localhost:3000