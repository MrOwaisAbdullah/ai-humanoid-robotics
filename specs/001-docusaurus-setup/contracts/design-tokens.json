{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Design System Tokens Schema",
  "description": "Schema for design system configuration and tokens",
  "type": "object",
  "required": ["colors", "typography"],
  "properties": {
    "colors": {
      "type": "object",
      "required": ["primary"],
      "properties": {
        "primary": {
          "type": "object",
          "properties": {
            "light": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$",
              "description": "Primary color for light theme"
            },
            "dark": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$",
              "description": "Primary color for dark theme"
            }
          },
          "required": ["light", "dark"]
        },
        "background": {
          "type": "object",
          "properties": {
            "light": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$"
            },
            "dark": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$"
            }
          }
        },
        "foreground": {
          "type": "object",
          "properties": {
            "light": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$"
            },
            "dark": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$"
            }
          }
        }
      }
    },
    "typography": {
      "type": "object",
      "required": ["sansSerif"],
      "properties": {
        "sansSerif": {
          "type": "string",
          "description": "Sans-serif font family"
        },
        "serif": {
          "type": "string",
          "description": "Serif font family"
        },
        "mono": {
          "type": "string",
          "description": "Monospace font family"
        }
      }
    },
    "spacing": {
      "type": "object",
      "properties": {
        "base": {
          "type": "string",
          "pattern": "^[0-9.]+(rem|px|em)$"
        },
        "scale": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      }
    },
    "borderRadius": {
      "type": "string",
      "pattern": "^[0-9.]+(rem|px|em)$"
    },
    "shadows": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "CSS shadow definition"
      }
    }
  }
}